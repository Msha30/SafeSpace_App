<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    tools:context=".home.Home">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:padding="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/peersupport"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/counseling"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/main_background"
            app:shapeAppearanceOverlay="@style/RoundedImage"/>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/counseling"
            app:layout_constraintStart_toStartOf="@id/counseling"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/circ1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_counseling"/>
        
        <TextView
            app:layout_constraintStart_toStartOf="@id/counseling"
            app:layout_constraintTop_toBottomOf="@id/circ1"
            app:layout_constraintBottom_toBottomOf="@id/counseling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/counselingbtn"
            android:textColor="@color/white"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/small"/>
        
        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/counseling"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/peersupport"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/main_background"
            app:shapeAppearanceOverlay="@style/RoundedImage"/>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/peersupport"
            app:layout_constraintStart_toStartOf="@id/peersupport"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/circ2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sessions"/>

        <TextView
            app:layout_constraintStart_toStartOf="@id/peersupport"
            app:layout_constraintTop_toBottomOf="@id/circ2"
            app:layout_constraintBottom_toBottomOf="@id/peersupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/sessionbtn"
            android:textColor="@color/white"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/small"/>
        
        

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:fontFamily="@font/psbold"
        android:textSize="@dimen/small"
        android:textColor="@color/textgrey"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upcoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:listitem="@layout/item_upcoming"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:fontFamily="@font/psbold"
        android:textSize="@dimen/small"
        android:textColor="@color/textgrey"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="65dp"
        android:orientation="vertical"
        tools:listitem="@layout/item_notif"/>

</LinearLayout>