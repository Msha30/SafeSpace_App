<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    tools:context=".home.Home">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:padding="0dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/peersupport"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/counseling"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/main_background"
            app:shapeAppearanceOverlay="@style/RoundedImage"/>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/counseling"
            app:layout_constraintStart_toStartOf="@id/counseling"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/circ1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_counseling"/>
        
        <TextView
            app:layout_constraintStart_toStartOf="@id/counseling"
            app:layout_constraintTop_toBottomOf="@id/circ1"
            app:layout_constraintBottom_toBottomOf="@id/counseling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/counselingbtn"
            android:textColor="@color/white"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/small"/>
        
        <com.google.android.material.imageview.ShapeableImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/counseling"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/peersupport"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/main_background"
            app:shapeAppearanceOverlay="@style/RoundedImage"/>

        <ImageView
            app:layout_constraintTop_toTopOf="@id/peersupport"
            app:layout_constraintStart_toStartOf="@id/peersupport"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/circ2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sessions"/>

        <TextView
            app:layout_constraintStart_toStartOf="@id/peersupport"
            app:layout_constraintTop_toBottomOf="@id/circ2"
            app:layout_constraintBottom_toBottomOf="@id/peersupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/sessionbtn"
            android:textColor="@color/white"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/small"/>
        
        

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming"
        android:fontFamily="@font/psbold"
        android:textSize="@dimen/small"
        android:textColor="@color/textgrey"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="1dp"
            android:orientation="vertical"
            android:background="@drawable/f_rounded_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_top_green"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_type_call"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peer Support Session"
                    android:textColor="@color/white"
                    android:textSize="@dimen/smaller"
                    android:fontFamily="@font/psbold"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_placeholder"
                    android:elevation="1dp"
                    app:shapeAppearanceOverlay="@style/CircleImage"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psbold"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOW"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ps"
                        android:textSize="@dimen/small"/>


                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnjoin"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:padding="0dp"
                android:text="Join"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/smaller"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/f_rounded_green"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="1dp"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:background="@drawable/f_rounded_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_top_blue"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_type_counseling"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guidance Counseling"
                    android:textColor="@color/white"
                    android:textSize="@dimen/smaller"
                    android:fontFamily="@font/psbold"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center_vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_placeholder"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:elevation="1dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psbold"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/timerange"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ps"
                        android:textSize="@dimen/smaller"/>


                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btncancel"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:padding="0dp"
                android:text="Cancel"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/smaller"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/f_cancel_btn"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:fontFamily="@font/psbold"
        android:textSize="@dimen/small"
        android:textColor="@color/textgrey"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:background="@drawable/f_rounded_white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:src="@drawable/img_placeholder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/header"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psbold"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="@string/para"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ps"
                        android:textSize="@dimen/small"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/f_rounded_white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:src="@drawable/img_placeholder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/header"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psbold"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="@string/para"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ps"
                        android:textSize="@dimen/small"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/f_rounded_white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:src="@drawable/img_placeholder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/header"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psbold"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="@string/para"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ps"
                        android:textSize="@dimen/small"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:elevation="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/f_rounded_white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    android:src="@drawable/img_placeholder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/header"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psbold"
                        android:textSize="@dimen/small"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="@string/para"
                        android:textColor="@color/black"
                        android:fontFamily="@font/ps"
                        android:textSize="@dimen/small"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>