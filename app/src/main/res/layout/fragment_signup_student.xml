<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scaleType="centerCrop"
    android:background="@drawable/main_background"
    tools:context=".signup.SignupStudent">

    <TextView
        android:text="Sign Up"
        android:textColor="@color/white"
        android:fontFamily="@font/PSBold"
        android:textSize="@dimen/giant"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/f_rounded_start"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="60dp"
        android:paddingRight="30dp"
        android:paddingBottom="60dp"
        android:scaleType="centerCrop"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/f_rounded_white"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_transparent"
                android:fontFamily="@font/PS"
                android:hint="Preferred Name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/textgrey"
                android:textSize="@dimen/reg" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/f_rounded_white"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/studentid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_transparent"
                android:fontFamily="@font/PS"
                android:hint="Student ID"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/textgrey"
                android:textSize="@dimen/reg" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/f_rounded_white"
            app:hintEnabled="false"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            app:passwordToggleTint="@color/btngrey"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:background="@drawable/f_transparent"
                android:textColorHint="@color/textgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/PS"
                android:textSize="@dimen/reg"
                android:hint="Password"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/f_rounded_white"
            app:hintEnabled="false"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="20dp"
            app:passwordToggleTint="@color/btngrey"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmpassword"
                android:background="@drawable/f_transparent"
                android:textColorHint="@color/textgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/PS"
                android:textSize="@dimen/reg"
                android:hint=" Confirm Password"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/PS"
            android:textSize="@dimen/small"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="By logging in, you are agreeing to the"/>

        <TextView
            android:id="@+id/Terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/PS"
            android:textSize="@dimen/small"
            android:gravity="center"
            android:text="Terms and Conditions and Privacy Policy."
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:padding="0dp"
            android:text="Sign Up"
            android:fontFamily="@font/PSBold"
            android:textSize="@dimen/reg"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/f_rounded_blue"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>