<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    tools:context=".peers.Peers_1">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/backbtn"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/logo"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="1dp"
        android:layout_marginBottom="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/f_rounded_white"
        android:padding="25dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_bubble"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="Connect with us!"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/reg"
            android:lineHeight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peer"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/ps"
            android:textSize="@dimen/small"
            android:lineHeight="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/peer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:padding="0dp"
            android:text="Peer Facilitators"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/reg"
            android:textColor="@color/textgrey"
            app:backgroundTint="@null"
            android:background="@drawable/f_rounded_inactive"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pair"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:padding="0dp"
            android:text="Start Pairing"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/reg"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/f_rounded_blue"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>