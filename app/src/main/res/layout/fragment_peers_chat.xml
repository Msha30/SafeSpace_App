<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    tools:context=".peers.Peers_Chat">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:padding="0dp"/>

    <LinearLayout
        android:elevation="1dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/f_rounded_white"
        android:padding="25dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/ic_bubble"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/guide"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:padding="0dp"
                android:text="Guide"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/reg"
                android:textColor="@color/textgrey"
                app:backgroundTint="@null"
                android:background="@drawable/f_rounded_inactive"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/peer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:padding="0dp"
                android:text="Peer Facilitators"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/reg"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/f_rounded_blue"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_messages"
        tools:itemCount="1"/>


</LinearLayout>