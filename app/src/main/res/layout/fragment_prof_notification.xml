<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.ProfNotification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="11dp"
            android:layout_height="17dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications &amp; Sounds"
            android:fontFamily="@font/psbold"
            android:textColor="@color/midblue"
            android:textSize="@dimen/mid"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_rounded_white"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification &amp; Sounds"
                    android:textColor="@color/black"
                    android:fontFamily="@font/psmedium"
                    android:textSize="@dimen/reg"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:thumb="@drawable/thumb_selector"
                    android:checked="true"
                    app:track="@drawable/track_selector"
                    app:thumbTint="@null"
                    app:trackTint="@null">
                </androidx.appcompat.widget.SwitchCompat>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Support Group"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/small"
                android:textColor="@color/textgrey"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_rounded_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="New Group Messages"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Events"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/small"
                android:textColor="@color/textgrey"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_rounded_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="New Messages"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="New Group Session"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GCO Events"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Counseling Session Confirmation"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Peer Support Session Confirmation"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Scheduled Session Reminder"
                        android:textColor="@color/black"
                        android:fontFamily="@font/psmedium"
                        android:textSize="@dimen/reg"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:thumb="@drawable/thumb_selector"
                        android:checked="true"
                        app:track="@drawable/track_selector"
                        app:thumbTint="@null"
                        app:trackTint="@null">
                    </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>