<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/main_background"
    tools:context=".signup.Signup">

    <TextView
        android:text="Sign Up"
        android:textColor="@color/white"
        android:fontFamily="@font/psbold"
        android:textSize="@dimen/giant"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/f_rounded_start"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="60dp"
        android:paddingRight="30dp"
        android:paddingBottom="60dp"
        android:scaleType="centerCrop"
        app:flow_horizontalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="1">
        
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnstudent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/f_rounded_inactive"
                android:elevation="1.5dp"
                android:fontFamily="@font/psbold"
                android:padding="0dp"
                android:text="Student"
                android:textColor="@color/textgrey"
                android:textSize="@dimen/reg"
                android:clickable="true"
                android:focusable="true"

                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/btnpeer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:background="@drawable/f_rounded_inactive"
                android:elevation="1.5dp"
                android:fontFamily="@font/psbold"
                android:padding="0dp"
                android:text="PEER"
                android:textColor="@color/textgrey"
                android:textSize="@dimen/reg"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"/>


        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/f_rounded_white"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_transparent"
                android:fontFamily="@font/ps"
                android:hint="First Name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/textgrey"
                android:textSize="@dimen/reg" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/f_rounded_white"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_transparent"
                android:fontFamily="@font/ps"
                android:hint="Last Name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/textgrey"
                android:textSize="@dimen/reg" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/f_rounded_white"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_transparent"
                android:fontFamily="@font/ps"
                android:hint="School Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/textgrey"
                android:textSize="@dimen/reg" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/f_rounded_white"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:hintEnabled="false"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/program"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/f_transparent"
                android:fontFamily="@font/ps"
                android:hint="Program"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/textgrey"
                android:textSize="@dimen/reg"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnnext"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:text="Next"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/reg"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/f_rounded_blue"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>