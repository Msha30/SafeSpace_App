<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/main_background"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.HomePeerSupport">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/backbtn"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_return"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/f_type_schedulepeer"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule a Peer\nSupport Session"
            android:textColor="@color/white"
            android:fontFamily="@font/psbold"
            android:textSize="@dimen/big"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/desc"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/f_rounded_form"
            android:padding="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/peerform"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:fontFamily="@font/psmedium"
                android:textSize="@dimen/small"
                android:lineHeight="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnstart"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:padding="0dp"
                android:text="Start"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/reg"
                android:textColor="@color/white"
                app:backgroundTint="@null"
                android:background="@drawable/f_rounded_blue"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>