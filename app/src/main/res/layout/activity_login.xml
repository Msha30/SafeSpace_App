<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/main_background"
    tools:context=".login.Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_height="80dp"
        android:layout_width="300dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_full"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintDimensionRatio="1:1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:background="@drawable/f_rounded_start"
        android:scaleType="centerCrop"
        android:orientation="vertical"
        app:flow_horizontalAlign="center"
        android:gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/f_rounded_white"
            app:hintEnabled="false"
            android:elevation="1.5dp"
            android:paddingLeft="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputemail"
                android:background="@drawable/f_transparent"
                android:textColorHint="@color/textgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/PS"
                android:textSize="@dimen/reg"
                android:hint="School Email"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/f_rounded_white"
            app:hintEnabled="false"
            android:elevation="1.5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="25dp"
            app:passwordToggleTint="@color/btngrey"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputpassword"
                android:background="@drawable/f_transparent"
                android:textColorHint="@color/textgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/PS"
                android:textSize="@dimen/reg"
                android:hint="Password"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forgotpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:text="Forgot your Password?"
            android:fontFamily="@font/PSBold"
            android:textSize="@dimen/small"
            android:textColor="@color/midblue"
            app:backgroundTint="@null"
            android:background="@drawable/f_transparent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="80dp"
            android:padding="0dp"
            android:text="Log In"
            android:fontFamily="@font/PSBold"
            android:textSize="@dimen/reg"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@drawable/f_rounded_blue"/>

    </LinearLayout>

    <TextView
        app:layout_constraintBottom_toTopOf="@+id/Terms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:fontFamily="@font/PS"
        android:textSize="@dimen/small"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:text="By logging in, you are agreeing to the"/>

    <TextView
        android:id="@+id/Terms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:fontFamily="@font/PS"
        android:textSize="@dimen/small"
        android:gravity="center"
        android:text="Terms and Conditions and Privacy Policy."
        android:clickable="true"
        android:focusable="true"
        android:linksClickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>