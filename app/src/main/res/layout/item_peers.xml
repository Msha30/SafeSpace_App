<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="1dp"
    android:padding="15dp"
    android:layout_marginBottom="15dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:background="@drawable/f_rounded_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:src="@drawable/img_placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ONLINE"
                android:textColor="@color/green"
                android:textStyle="italic"
                android:fontFamily="@font/psbold"
                android:textSize="@dimen/smallest"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/header"
        android:textSize="@dimen/small"
        android:textColor="@color/black"
        android:fontFamily="@font/psbold"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btninfo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:padding="0dp"
        android:text="See Info"
        android:fontFamily="@font/psbold"
        android:textSize="@dimen/smaller"
        android:textColor="@color/textgrey"
        app:backgroundTint="@null"
        android:background="@drawable/f_rounded_inactive"/>


</LinearLayout>