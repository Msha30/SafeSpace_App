<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">9dp</item> <!-- makes it circle -->
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- makes it circle -->
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/btngrey</item>
    </style>

    <style name="CustomDropDownListView" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ps</item>
        <item name="android:textSize">@dimen/reg</item>
    </style>


</resources>